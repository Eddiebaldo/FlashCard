<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    tools:background="@android:color/holo_blue_light">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/study"
            style="@style/list_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/study" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/study_text"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit"
            style="@style/list_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/preview_edit" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/edit_button_text"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz"
            style="@style/list_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/quiz" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/quiz_text"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            style="@style/list_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/delete_forever" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/delete_text"
                android:textSize="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
