<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddCardActivity"
    tools:showIn="@layout/activity_add_card">


    <TextView
        android:id="@+id/textView"
        android:layout_width="93dp"
        android:layout_height="0dp"
        android:layout_marginBottom="191dp"
        android:layout_marginTop="60dp"
        android:text="Input"
        app:layout_constraintBottom_toTopOf="@+id/inputanswer"
        app:layout_constraintEnd_toEndOf="@+id/inputquestion"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/inputquestion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Input Card Info" />

    <EditText
        android:id="@+id/inputanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="195dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/inputquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Question"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/inputanswer"
        app:layout_constraintEnd_toEndOf="@+id/inputanswer"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/addbutton"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputanswer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inputanswer"
        app:layout_constraintTop_toBottomOf="@+id/inputanswer"
        app:layout_constraintVertical_bias="0.542"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_home_black_24dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="389dp" />

</android.support.constraint.ConstraintLayout>